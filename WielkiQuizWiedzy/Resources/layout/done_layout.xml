<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/ic_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/TotalScore"
            android:gravity="center"
            android:text="Wynik : 0"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_below="@+id/logoDone"
            android:textColor="@android:color/background_light"
            android:textAllCaps="true"/>

    <TextView
            android:id="@+id/TotalQuestion"
            android:gravity="center"
            android:text=""
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/TotalScore"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"/>

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/progressBarDone"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignBottom="@+id/TotalQuestion"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/TotalQuestion"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="64dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="64dp"/>

    <Button
            android:id="@+id/buttonTryAgain"
            android:background="@drawable/rounded_corners"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="graj dalej"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="64dp"
            android:layout_below="@+id/progressBarDone"
            />

    <ImageView
            android:src="@drawable/ic_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/logoDone"
            android:layout_marginTop="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="64dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="64dp"/>

</RelativeLayout>