<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_background"
        >

    <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Autorzy:"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/imageView"/>

    <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Hubert Mościcki"
            android:textAlignment="viewStart"
            android:layout_below="@+id/textView4"
            android:textSize="18sp"
            android:layout_alignParentStart="true"/>

    <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/info"
            android:layout_below="@+id/textView8"
            android:textSize="16sp"
            android:layout_alignParentStart="true"/>

    <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Kacper Moskal"
            android:layout_below="@+id/textView5"
            android:textSize="18sp"
            android:layout_alignParentStart="true"/>

    <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Michał Michalak"
            android:layout_below="@+id/textView7"
            android:textSize="18sp"
            android:layout_alignParentStart="true"/>

    <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Developer"
            android:layout_below="@+id/textView4"
            android:layout_toEndOf="@+id/textView5"
            android:textSize="18sp"
            />

    <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="QA Engineer"
            android:layout_below="@+id/textView9"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/textView5"
            android:layout_marginStart="16dp"/>

    <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="UI/UX Designer"
            android:layout_below="@+id/textView10"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/textView5"
            android:layout_marginStart="16dp"/>

    <TextView
            android:text="@string/info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:textSize="16sp"/>

    <TextView
            android:text="@string/info3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:textSize="16sp"/>

    <TextView
            android:text="@string/info4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:textSize="16sp"/>

    <TextView
            android:text="@string/info5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:textSize="16sp"/>

    <ImageView
            android:src="@drawable/ic_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView"
            android:layout_marginTop="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"/>

</RelativeLayout>
